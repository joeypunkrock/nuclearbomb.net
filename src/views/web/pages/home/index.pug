extends ../../layouts/base

block config
  - pageTitle = ''
  - page = 'command-center'
  - isHome = true

block navbar
  include ../../components/layout/navbar/navbar

block content

  // TODO: Animate Highlitght spacebar on keyboard and bind launch to spacebar

  .lcd-lines

    .command-bg

    .main-monitor
      .main-monitor-inner.relative
        .monitor-inner-boundary
          img(src="/assets/images/wordart.png" alt="" class="monitor-title")
          div
            .window.left-20.absolute.window-launch.window-draggable(style="transform: scale(1.6)")
              .title-bar
                .title-bar-text.text-xs
                  | Missile Launch Command
                .title-bar-controls
                  button(aria-label='Minimize')
                  button(aria-label='Maximize')
                  button(aria-label='Close')
              .window-body
                p.mb-2.text-base Commence nuclear missile launch!
                section.field-row(style='justify-content: flex-end')
                  button Cancel
                  button#btnLaunch.text-red-700.font-bold Launch
            .window.left-20.absolute.window-map.window-draggable(style="transform: scale(1.6)")
              .title-bar
                .title-bar-text.text-xs
                  | Thermonuclear War Map
                .title-bar-controls
                  button(aria-label='Minimize')
                  button(aria-label='Maximize')
                  button(aria-label='Close')
              .window-body
                p.mb-2.text-base Witness Devastation and Intel
                section.field-row(style='justify-content: flex-end')
                  button Cancel
                  button#btnLaunch.font-bold
                    a.text-blue-900(href="/world") Open Map

            .sunken-panel.absolute.window-country-stats.window-draggable(style="transform: scale(1.6)")
              table.interactive(style="margin-top: 0;")
                thead
                  tr
                    th Country
                    th Pop
                    th killed
                    th Strikes
                tbody
                  tr
                    td France
                    td 64 mil
                    td 14 mil
                    td 2
                  tr
                    td USA
                    td 315 mil
                    td 35 mil
                    td 6
                  tr
                    td UK
                    td 59 mil
                    td 9 mil
                    td 4
    .main-monitor.main-monitor--trans



block footer
  include ../../components/layout/footer/footer